Q_PLUGIN="hdn"

function neutron_plugin_configure_common {
    Q_PLUGIN_CLASS="hdn.plugins.core.plugin.HdnNeutronPlugin"
    Q_SERVICE_PLUGIN_CLASSES="hdn.plugins.l3.plugin.HdnL3Plugin"
    Q_PLUGIN_CONF_PATH=etc/neutron/plugins/hdn
    Q_PLUGIN_CONF_FILENAME=hdn.ini
    Q_PLUGIN_CONF_FILE=$Q_PLUGIN_CONF_PATH/$Q_PLUGIN_CONF_FILENAME
}

function neutron_plugin_configure_service {
    #cd $HDN_DIR; tox -egenconfig; cd -
    cp $HDN_DIR/etc/* /$Q_PLUGIN_CONF_PATH -R
}

function has_neutron_plugin_security_group {
    # 0 means True here
    return 0
}

